#
# Base
#

!config:'# ==== BASE ===='
!config:'export WORKSPACE="${HOME}/workspace"'
!config:'export WORKSPACE_MIRROR="${WORKSPACE}/mirror"'
!config:'export WORKSPACE_BOOTSTRAP="${WORKSPACE}/bootstrap"'
!config:'export WORKSPACE_PLAYBOOK="${WORKSPACE}/playbook"'

if_system:"CentOS"
   unless:git
      warn:"Missing git: 'yum install git' or bootstrap"
   end_unless
   unless:curl
      warn:"Missing curl: 'yum install curl' or bootstrap"
   end_unless
   unless:rsync
      warn:"Missing rsync: 'yum install rsync' or bootstrap"
   end_unless
   unless:python3
      warn:"Missing python3: 'yum install python3' or bootstrap"
   end_unless
   unless:ansible
      warn:"Missing ansible: 'python3 -m pip install ansible' or bootstrap"
   end_unless
else_system:
   unless:git
      warn:"Missing git'"
   end_unless
   unless:curl
      warn:"Missing curl'"
   end_unless
   unless:rsync
      warn:"Missing rsync'"
   end_unless
   unless:python3
      warn:"Missing python3"
   end_unless
   unless:ansible
      warn:"Missing ansible"
   end_unless
end_if_system
