{
  "provisioners": [
     {
       "type": "shell",
       "script": "provision.sh"
     }
  ],

  "builders": [
    {
      "box_name": "{{ item.args.base_box }}",
      "source_path": "{{ item.args.base_box }}",
      "add_force": true,
      "output_dir": "{{ box_workspace_path }}/sandbox/boxes/{{ item.args.template}}",
      "provider": "virtualbox",
      "template": "Vagrantfile",
      "type": "vagrant",
      "communicator": "ssh"
    }
  ]
}

